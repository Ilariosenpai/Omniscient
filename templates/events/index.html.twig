{% extends 'base.html.twig' %}

{% block title %}Nos tournois{% endblock %}

{% block body %}



  
   

<h1 class="text-center pt-5">Nos événements</h1>

<div class="container pt-5 pb-5">
    <div class="row">
        {% for tournament in data.data.tournaments.nodes %}
        <div class="col-lg-4 mb-4"> <!-- Utilisation de col-lg-4 pour une meilleure largeur -->
            <div class="card shadow-lg border-light rounded-lg" style="width: 100%; min-height: 350px;"> <!-- Largeur à 100% et hauteur minimale accrue -->
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <h2 class="card-title mb-3 ">{{ tournament.name }}</h2>
                    <p class="card-text text-muted mb-4">{{ tournament.startAt|date}}</p>
                    <a href="https://www.start.gg/{{ tournament.slug }}" class="btn btn-primary" style="background-color: #51458A; border-color: #51458A;" target="_blank">Voir l'événement</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>






{% endblock %}
