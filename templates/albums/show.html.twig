 {% extends 'base.html.twig' %}

{% block title %}{{album.name}}{% endblock %}

{% block body %}

<div class="container">

    <h1 class="text-center pt-5 pb-5">{{ album.name }}</h1>
   
    <div class="row pt-5 pb-5">
        {% for image in album.image %}
            <div class="col-md-3">
                <a href="{{ asset('images/posts/' ~ image.url) }}" target="_blank">
                    <img src="{{ asset('images/posts/' ~ image.url) }}" class="img-fluid" alt="{{ album.name }}" >
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="text-center pt-5 pb-5">
    <a href="{{ path('app_albums') }}" class="btn btn-black" style="background-color: #51458A">Retour aux albums</a>

</div>

{% endblock %}
   

