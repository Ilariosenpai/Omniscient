{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
<div class="text-center">
    <h1>Albums</h1>
    <p>Voici les albums de nos moments marquants.</p>

</div>


<section class="player-display pt-5 pb-5">
{% for album in albums %}

        <div class="card">
        <div class="card-info">
        <div class="card-title">{{album.name}}</div>
        <div class="card-text">{{album.date|date('d/m/Y')}}</div>

        <div class="card-image">
            <img src="images/posts/{{ album.image[0].url }}" alt="{{ album.name }}" class="img-fluid" width="100px">
        </div>

</div>
{% endfor %}

</section>
{% endblock %}
